apiVersion: v1
kind: ConfigMap
metadata:
  name: service-config  # 하나의 ConfigMap만 사용
  namespace: eks-app
data:
  ACTIVE_ENV: "blue"  # 현재 운영 중인 환경 (blue or green)
  
  # Blue 환경 (운영 중)
  LOGIN_URL_BLUE: "http://login-service:8000/login"
  USER_URL_BLUE: "http://user-service:8000/user"
  RESERVE_URL_BLUE: "http://reserve-service:8000/reserve"
  VERIFY_URL_BLUE: "http://reserve-service:8000/reserve/verify_user_info"
  TICKET_INFO_URL_BLUE: "http://reserve-service:8000/reserve/ticket"

  # Green 환경 (새 버전 테스트 중)
  LOGIN_URL_GREEN: "http://login-service-preview:8000/login"
  USER_URL_GREEN: "http://user-service-preview:8000/user"
  RESERVE_URL_GREEN: "http://reserve-service-preview:8000/reserve"
  VERIFY_URL_GREEN: "http://reserve-service-preview:8000/reserve/verify_user_info"
  TICKET_INFO_URL_GREEN: "http://reserve-service-preview:8000/reserve/ticket"
